
// Write CSS like screenshot on desktop

body
  margin: 0
  padding: 0
  overflow: hidden

#optionsPanel
  width: 650px
  height: 500px
  display: block
  nav
    padding: 0 10px
    height: 40px
    display: flex
    align-items: flex-end
    border-bottom: solid 1px silver
    position: fixed
    left: 0
    right: 0
    ol
      list-style-type: none
      margin: 0
      padding: 0
      display: flex
      li
        cursor: pointer
        padding: 5px 10px
        margin-bottom: -1px
        border: solid 1px transparent

.hide
  display: none !important

.show
  display: flex !important

#optionsPanel li.selected
  border-color: silver
  border-bottom-color: #fff

#settings
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  overflow-y: auto
  overflow-x: hidden
  margin-top: 41px
  display: flex
  padding: 14px 17px
  .moreInfo
    opacity: 0.5
    margin-bottom: 10px
    margin-top: 2px
    &:hover
      opacity: 1.0

#optionsPanel #settings section
  flex: 1
  display: flex
  flex-direction: column
  .settings-row
    margin: 6px 0 0

#lookAndBehaviour
  display: none
  .flexrow
    display: flex
    flex-direction: row
  #integratedSearches
    .checkbox
      margin-right: 15px
      span
        margin-left: 4px
        margin-top: -1px

#setup
  display: none
  .input-box
    display: flex
    flex-direction: column
    // margin-top: 10px
    margin-bottom: 10px
    max-width: 400px

#helpAbout
  display: none
