break-long-words()
  word-wrap: break-word
  overflow-wrap: break-word
  word-break: break-word
  hyphens: auto

#msResultsBox
  /*
  * Cause we are existing in 3 browsers, gonna use normilize.css
  */
  @import 'normalize'
  display: flex
  overflow: hidden
  width: 620px
  background-color: #fff
  // outline: 2px solid LightCoral

.msResultsBoxHide
  display: none !important
.msResultsBoxShowTabOnly
  width: 40px !important

#msResultsBoxSidebar
  width: 40px
  height: 100%
  background-color: #3498DB
  &:hover
    cursor: pointer
  // outline: 2px solid DeepPink

#msSidebarIcon
  text-align: center
  font-family: "exo_regular"
  font-size: 24.7px
  color: white
  width: 40px
  position: sticky
  top: 0

/*
* This is so that the width of the icon stays the same when we switch to position: fixed in the js when the browser
* doesn't support position: sticky.
*/
#msSidebarIconHidden
  text-align: center
  font-family: "exo_regular"
  font-size: 24.7px
  color: white
  width: 40px
  visibility: hidden

.msSidebarIconFixed
  position: fixed
  top: 0

#msResultsBoxResultsContainer
