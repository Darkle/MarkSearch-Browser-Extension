
@font-face
  font-family: 'open_sansregular'
  src: url('../fonts/opensans-regular.woff2') format('woff2')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'exoregular'
  src: url('../fonts/Exo-regular-MS-text-only.woff2') format('woff2')
  font-weight: normal
  font-style: normal

#msResultsBox
  font-family: "open_sansregular"
  // overflow-y: scroll
  border: 1px solid #ebebeb
  position: absolute
  right: 0
  z-index: 99999
  display: flex
  // Give the results box a default MIN-height on page load so that
  // the thrashing of changing the height is less noticable and also
  // for the rare times when google has no results but MarkSearch does.
  // We're guessing here a bit - 123px is the height of the footer
  // Note: the googleSearch_ContentScript adds an inline MAX-height
  // min-height: calc(100vh - 123)
  // height: 100%
  width: 500px

#msResultsBoxSidebar
  width: 40px
  // float: left
  height: 100%
  background-color: #3498DB
  &:hover
    cursor: pointer

#msSidebarIcon
  text-align: center
  font-family: "exoregular"
  font-size: 1.9em
  color: white
  width: 40px

.msSidebarIconFixed
  position: fixed
  top: 0

#msResultsBoxResultsContainer
  // padding-left: 50px
  overflow-y: auto
  width: 100%
